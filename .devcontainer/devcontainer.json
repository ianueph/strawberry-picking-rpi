{
    "name": "Strawberry Picking RPI Development Container",
    "privileged": true,
    "remoteUser": "${localEnv:USER}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "${localEnv:USER}"
        }
    },
    "workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "RMW_IMPLEMENTATION":"rmw_cyclonedds_cpp",
        "GHP":"${localEnv:GHP}",
        "DISPLAY": "localhost:10.0",
        "XAUTHORITY":"${localEnv:HOME}/.Xauthority",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "SUBNET",
        "ROS_DOMAIN_ID": "42",
        "UDEV":"1"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "--device=/dev:/dev",
        "--device=/dev/dma_heap:/dev/dma_heap",
        "--volume=/dev/:/dev/",
        "--volume=/run/udev:/run/udev:ro",
        "--volume=/run/dbus:/run/dbus",
        "--volume=/etc/udev:/etc/udev",
        "--group-add=video",
        "--shm-size=1g",
        "--memory=2g",
        "--privileged"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
       "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
       "source=${localEnv:HOME},target=${localEnv:HOME},type=bind,consistency=cached"
    ],
    "postCreateCommand": "sudo ./.devcontainer/postCreateCommand.sh"
}